{
  "include": [
    "src/"
  ],
  "exclude": [
    "build",
    "node_modules",
    "tests"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "module": "esnext",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true
  }
}