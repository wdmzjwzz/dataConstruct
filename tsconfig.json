{
  "include": [
    "src/",
    "global.d.ts"
  ],
 
  "compilerOptions": {
    "outDir": "/dist",
    "baseUrl": "/",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "jsx": "react",
    "module": "esnext",
    "noImplicitAny": true,
    "strictNullChecks": false,
    "noUnusedLocals": true
  }
}